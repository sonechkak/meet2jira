# Database Settings (Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=meet2jira
DB_USER=meet2jira_user
DB_PASSWORD=meet2jira_password
SQLALCHEMY_DATABASE_URI="postgresql+asyncpg://meet2jira_user:meet2jira_password@127.0.0.1:5432/meet2jira"
SQLALCHEMY_ECHO=true

# Redis
REDIS_URL=redis://redis:6379/0

# Application
APP_NAME=Meet2Jira
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# FastAPI
API_PREFIX=/api
DOCS_URL=/docs
REDOC_URL=/redoc

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./backend/static/images
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Admin Settings
ADMIN_PREFIX=/admin
ADMIN_SITE_NAME=Meet2Jira Admin
ADMIN_SECRET_KEY=admin-secret-key-change-in-production
