# Используем тот же базовый образ что и основной Dockerfile
FROM python:3.12-slim

# Создаем пользователя
RUN useradd --create-home --shell /bin/bash appuser

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем файлы проекта
COPY pyproject.toml .
COPY src/ ./src/

# Меняем владельца файлов
RUN chown -R appuser:appuser /app

# Переключаемся на пользователя
USER appuser

# Устанавливаем зависимости (включая dev для тестов)
RUN pip install --user -e ".[dev]"

# Команда по умолчанию для тестов
CMD ["python", "-m", "pytest", "src/tests/", "-v", "--tb=short"]